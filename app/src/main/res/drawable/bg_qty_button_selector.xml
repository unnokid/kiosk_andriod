<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#E0D7FF"/> <!-- 눌렀을 때 연보라 -->
            <corners android:radius="999dp"/>
            <stroke android:width="1dp" android:color="#7C4DFF"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#F7F3FF"/> <!-- 기본 배경: 거의 흰색 -->
            <corners android:radius="999dp"/>
            <stroke android:width="1dp" android:color="#B39DDB"/>
        </shape>
    </item>
</selector>
